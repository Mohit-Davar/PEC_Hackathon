<script>
    // Typewriter text content
    const quote = "Summarizer: Your AI-powered tool for  communication with PDFs.";
    let i = 0;

    // Typewriter effect function
    function typeWriter() {
        if (i < quote.length) {
            document.getElementById("quote").innerHTML += quote.charAt(i);
            i++;
            setTimeout(typeWriter, 80); // Speed up the typing (80ms per character)
        }
    }

    // Trigger typewriter effect on page load
    window.onload = function () {
        typeWriter();
        // Trigger the container fade-in animation after a delay
        setTimeout(() => {
            document.querySelector('.container').style.opacity = 1;
            document.querySelector('.container').style.transform = 'translateY(0)';
        }, 200); // Delay for the fade-in effect
    };
</script>