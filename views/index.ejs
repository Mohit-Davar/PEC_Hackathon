    <style>
        /* Resetting default browser padding and margin */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        /* Body styling for a full-page, centered layout */
        body {
            font-family: 'Poppins', sans-serif;
            /* Default font for body */
            background-color: #000;
            /* Black background */
            background: linear-gradient(135deg, #000, #111);
            /* Subtle gradient */
            color: #FFD700;
            /* Yellow text */
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
            text-align: center;
            overflow: hidden;
            /* Prevent scrollbars */
        }

        /* Main container for the page content */
        .container {
            max-width: 900px;
            /* Increased max-width */
            padding: 20px;
            opacity: 0;
            /* Start hidden for animation */
            transform: translateY(20px);
            /* Start below */
            animation: fadeInUp 0.8s forwards;
            /* Fade-in effect */
        }

        /* Main title styling with Roboto font */
        h1 {
            font-family: 'Roboto', sans-serif;
            /* Changed font family to Roboto */
            font-size: 64px;
            /* Increased font size */
            font-weight: 800;
            margin-bottom: 30px;
            color: #FFD700;
            letter-spacing: 2px;
            /* Spacing between letters */
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.7);
            /* Text shadow for depth */
            opacity: 0;
            /* Start hidden for animation */
            transform: translateY(-20px);
            /* Start above */
            animation: fadeInDown 0.8s forwards;
            /* Fade-in down effect */
            animation-delay: 0.2s;
            /* Delay for staggered effect */
        }

        /* Subtitle (quote) area with typewriter effect */
        .typewriter {
            font-size: 32px;
            /* Increased font size */
            border-right: 3px solid #FFD700;
            /* Yellow blinking cursor */
            white-space: nowrap;
            overflow: hidden;
            display: inline-block;
            /* Keep it inline-block for centering */
            animation: blink 1s infinite;
            /* Blinking cursor */
            opacity: 0;
            /* Start hidden for animation */
            transform: translateY(20px);
            /* Start below */
            animation: fadeInUp 0.8s forwards;
            /* Fade-in effect */
            animation-delay: 0.5s;
            /* Delay for staggered effect */
            text-align: center;
            /* Center align text */
        }

        /* Blinking effect for the typewriter cursor */
        @keyframes blink {

            0%,
            50% {
                border-color: #FFD700;
                /* Visible */
            }

            50%,
            100% {
                border-color: transparent;
                /* Hidden */
            }
        }

        /* Fade-in effect for the main content */
        @keyframes fadeInUp {
            to {
                opacity: 1;
                /* Fully visible */
                transform: translateY(0);
                /* Original position */
            }
        }

        /* Fade-in down effect for title */
        @keyframes fadeInDown {
            to {
                opacity: 1;
                /* Fully visible */
                transform: translateY(0);
                /* Original position */
            }
        }

        /* Call-to-action button below the quote */
        .cta {
            margin-top: 50px;
            opacity: 0;
            /* Start hidden for animation */
            transform: translateY(20px);
            /* Start below */
            animation: fadeInUp 0.8s forwards;
            /* Fade-in effect */
            animation-delay: 0.7s;
            /* Delay for staggered effect */
        }

        /* Styling the Get Started button */
        .cta a {
            text-decoration: none;
            background-color: #FFD700;
            /* Yellow background */
            color: #000;
            /* Black text for contrast */
            padding: 15px 40px;
            font-size: 22px;
            border-radius: 8px;
            font-weight: bold;
            display: inline-block;
            transition: background-color 0.3s ease, color 0.3s ease, transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            /* For hover effect */
            overflow: hidden;
            /* Contain hover effects */
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            /* Add shadow */
        }

        /* Button hover effect */
        .cta a:hover {
            background-color: #333;
            /* Darker background on hover */
            color: #FFD700;
            /* Yellow text on hover */
            transform: scale(1.05);
            /* Slightly increase size on hover */
            box-shadow: 0 6px 15px rgba(255, 215, 0, 0.6);
            /* Highlight shadow on hover */
        }

        /* Responsive Design: for tablets and medium screens */
        @media (max-width: 768px) {
            h1 {
                font-size: 48px;
                /* Adjust title size */
            }

            .typewriter {
                font-size: 28px;
                /* Adjust typewriter size */
            }

            .cta a {
                font-size: 20px;
                /* Adjust button text size */
                padding: 12px 35px;
            }
        }

        /* Responsive Design: for small screens and mobile phones */
        @media (max-width: 480px) {
            h1 {
                font-size: 36px;
                /* Adjust title size further */
            }

            .typewriter {
                font-size: 22px;
                /* Adjust typewriter size */
            }

            .cta a {
                font-size: 18px;
                /* Adjust button text size */
                padding: 10px 25px;
            }
        }
    </style>
</head>

